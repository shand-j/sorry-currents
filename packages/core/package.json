{
  "name": "@sorry-currents/core",
  "version": "0.1.0",
  "description": "Core types, schemas, and utilities for sorry-currents Playwright test orchestration",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shand-j/sorry-currents.git",
    "directory": "packages/core"
  },
  "keywords": ["playwright", "testing", "sharding", "orchestration", "ci"],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "zod": "^3.24.0"
  }
}
