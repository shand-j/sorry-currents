{
  "name": "@sorry-currents/cli",
  "version": "0.4.1",
  "description": "CLI-native, zero-infrastructure Playwright test orchestration with smart sharding",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shand-j/sorry-currents.git",
    "directory": "packages/cli"
  },
  "keywords": ["playwright", "testing", "sharding", "orchestration", "ci", "cli"],
  "bin": {
    "sorry-currents": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sorry-currents/core": "workspace:*",
    "@sorry-currents/shard-balancer": "workspace:*",
    "@sorry-currents/html-report": "workspace:*",
    "commander": "^13.0.0",
    "chalk": "^5.4.0",
    "ora": "^8.0.0",
    "cli-table3": "^0.6.0",
    "js-yaml": "^4.1.0",
    "@octokit/rest": "^21.0.0"
  }
}
