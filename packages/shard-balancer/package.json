{
  "name": "@sorry-currents/shard-balancer",
  "version": "0.1.0",
  "description": "Smart test distribution engine for sorry-currents (LPT algorithm)",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shand-j/sorry-currents.git",
    "directory": "packages/shard-balancer"
  },
  "keywords": ["playwright", "sharding", "load-balancing", "lpt"],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
